  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Lauch File (Deno)",
      "type": "node",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "env": {
        "DENO_FUTURE": "1"
      },
      "runtimeExecutable": "/home/gitpod/.deno/bin/deno",
      "runtimeArgs": [
        "run",
        "--unstable",
        "--inspect-wait",
        "--allow-all"
      ],
      "attachSimplePort": 9229
    }
  ]
}